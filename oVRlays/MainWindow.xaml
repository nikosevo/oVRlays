<Window x:Class="oVRlays.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Racing Overlay" Height="600" Width="800">
    <Grid>
        <TabControl Name="MainTabControl">
            <TabItem Header="iracing" Name="TabAC">
                <TabControl Name="SubTabControlAC">
                    <TabItem Header="Telemetry">
                        <Grid>
                            <TextBlock Text="Assetto Corsa Telemetry" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <!-- Toggle Button -->
                            <ToggleButton x:Name="telemetry" Content="Toggle Telemetry" 
                                            Width="150" Height="40"
                                            Checked="telemetry_Checked" 
                                            Unchecked="telemetry_Unchecked"/>
                        
                        </Grid>
                    </TabItem>
                    <TabItem Header="Relatives">
                        <Grid>
                            <TextBlock Text="Assetto Corsa Relatives" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
